<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/title_background" />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/percentRL_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/title_background"
        app:layout_heightPercent="@string/title_height"
        app:layout_widthPercent="@string/title_width">

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="打印"
            android:textColor="@color/text_title_color"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/button_goback"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/title_imageview_paddingbottom"
            android:paddingLeft="@dimen/title_imageview_paddingleft"
            android:paddingRight="@dimen/title_imageview_paddingright"
            android:paddingTop="@dimen/title_imageview_paddingtop"
            android:src="@drawable/back" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonSB"
                style="@style/ButtonText"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="@string/sb"
                android:textSize="15sp"
                android:visibility="visible"
                tools:ignore="OnClick" />

            <EditText
                android:id="@+id/showET"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/bleselect"
                android:textSize="15sp" />
        </LinearLayout>


        <Button
            android:id="@+id/buttonConnect"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/connect"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttonDisconnect"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/discon"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btPrintCustom"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="true"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="打印"
            android:textSize="15sp" />

        <!--<Button-->
        <!--android:id="@+id/btPrintReceipt"-->
        <!--style="@style/ButtonText"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:enabled="true"-->
        <!--android:paddingBottom="12dp"-->
        <!--android:paddingTop="12dp"-->
        <!--android:text="打印回单联"-->
        <!--android:textSize="15sp" />-->

    </LinearLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
















